<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context=".MainActivity">

	<TextView
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="16dp"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
		android:text="Connection Mode"/>

	<Spinner
		android:id="@+id/main_mode_spinner"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<LinearLayout
	    android:id="@+id/main_IPLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="16dp"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="IP Address"/>

			<EditText
				android:id="@+id/main_addr_entry"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"/>

		</LinearLayout>

		<LinearLayout
	    	android:id="@+id/main_P2PLayout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="16dp"
				android:paddingLeft="16dp"
				android:paddingRight="16dp"
				android:text="P2P Partner"/>

			<Spinner
				android:id="@+id/main_partner_spinner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="16dp"/>


		</LinearLayout>
	</LinearLayout>

	<Button
		android:id="@+id/main_go_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:text="CONNECT"/>

</LinearLayout>
